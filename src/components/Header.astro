---
const { pathname } = Astro.url;
console.log(pathname);
---
<div>
  <header>
    <h1>My Long Blog</h1>
    <nav>
      <a href="/" class={pathname === "/" ? "active" : ""}>Home</a>
      <a href="/blog" class={pathname === "/blog" ? "active" : ""}>Blogs</a>
    </nav>
  </header>
  <hr>
</div>

<style>
  header {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 1.5rem 0 0.3rem;
    gap: 0.8rem;
    nav {
      display: flex;
      gap: 2rem;
      a {
        padding: 1rem 1.5rem;
        border: 1px solid transparent;
        text-decoration: none;
        color: black;
      }
      a:hover {
        border-bottom-color: black;
      }
      a.active {
        border-bottom: transparent;
        background-color: grey;
        color: white;
      }
    }
  }
  hr {
    height: 1px;
    max-width: 700px;
    margin: 0 auto;
    border: none;

    background: linear-gradient(
      to right,
      rgba(0,0,0,0),
      rgba(0,0,0,0.5),
      rgba(0,0,0,0.8),
      rgba(0,0,0,0.5),
      rgba(0,0,0,0)
      );
  }
</style>
